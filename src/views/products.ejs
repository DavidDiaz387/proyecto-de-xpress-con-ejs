<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/styles.ejs')  %> 
    <link rel="stylesheet" href="/stylesheets/app.css">
    <title>Products</title>
</head>
<body>
    <%-include('partials/header.ejs')  %> 
    <!--section-->
    <section class="caja"></section>
    <% arrayProducts.forEach(product => { %> 
            <div class="nameProduct">
                <h1><%=product.name%></h1>
            </div>
            <div class="product">
                <div class="imagen">
                    <a href="">
                        <figure class="">
                            <img src="/images/<%=product.image%>" alt="imagen de producto">
                        </figure>
                        <article class="">
                            <p>descripcion</p>
                        </article>
                    </a>
                </div>
                <div class="info">
                    <h3>precio real / con el descuento</h3>
                    <h4>precio ya con descuento</h4>
                </div>
            </div>
        
    
    <% }); %> 
</section>
    <!--section-->
</body>
</html>