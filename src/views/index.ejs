<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('partials/styles.ejs')  %> 
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
	<title>Mercado Liebre Argentina</title>
</head>
<body>
	<!-- Header -->
	<%- include('partials/header.ejs') %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% arrayProducts.forEach(product => { %> 
			<% if(product.category === "visited"){ %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/detail/<%=product.id%>">
						<figure class="product-box_image">
							<img src="/images/<%= product.image %> " alt="<%=product.name %> ">
						</figure>
						<article class="product-box_data">
							<h2>$<%= toThousand(product.price) %> </h2>
							<span><%= product.discount %>% OFF</span>
							<p><%= product.description %> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			 <% } %> 
			<% });  %>	
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% arrayProducts.forEach(product =>{  %> 
			<% if (product.category === "in-sale"){ %>  
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/detail/<%=product.id%>">
						<figure class="product-box_image">
							<img src="/images/<%= product.image %> " alt="<%=product.name %> ">
						</figure>
						<article class="product-box_data">
							<h2>$<%= product.price %> </h2>
							<span><%= product.discount %> % OFF</span>
							<p><%= product.description %> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
			<% });  %> 
			
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer.ejs') %> 
</body>
</html>